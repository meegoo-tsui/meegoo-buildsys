#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
-include buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
BUILD_PATH=`readlink -f "$(SRC_DIR)"`

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
all: config_env
	cd $(BUILD_PATH); \
	make

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
clean:
	rm -f buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
install:
	@echo "生成符号链接..."
	rm -rf $(EXEC_DIR)
	ln -s $(SRC_DIR)/build/romfs $(EXEC_DIR)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
others: config_env
	cd $(BUILD_PATH); \
	make $(prjs)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
config_env:
	BUILD_PATH=$(BUILD_PATH) ./config.sh

