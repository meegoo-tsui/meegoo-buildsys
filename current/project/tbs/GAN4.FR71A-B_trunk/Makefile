#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
-include buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
BUILD_PATH=$(SRC_DIR)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
all: config_env
	cd $(BUILD_PATH); \
	make

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
clean:
	rm -f buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
install:
	install -d $(EXEC_DIR)
	install $(BUILD_PATH)/build/romfs/*.bin $(EXEC_DIR)
	install $(BUILD_PATH)/build/romfs/*.img $(EXEC_DIR)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
others: config_env
	cd $(BUILD_PATH); \
	make $(prjs)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
config_env:
	BUILD_PATH=$(BUILD_PATH) ./config.sh

