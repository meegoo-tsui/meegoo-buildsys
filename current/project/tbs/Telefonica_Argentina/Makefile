#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
-include buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
BUILD_PATH=`readlink -f "$(SRC_DIR)/RTL8676xx"`

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
all:
	cd $(BUILD_PATH); \
	make

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
clean:
	rm -f buildsys.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
install:
	@echo "生成符号链接..."
	rm -rf $(EXEC_DIR)
	ln -s $(BUILD_PATH)/build/romfs $(EXEC_DIR)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
others:
	set -e; \
	cd $(BUILD_PATH); \
	make $(prjs)

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
logic:
	set -e; \
	cd $(BUILD_PATH); \
	make logic_clean logic logic_install rootfs romfs

